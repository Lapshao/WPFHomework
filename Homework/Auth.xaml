<ContentControl x:Class="Homework.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Homework"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,120,0,120" Width="346">
            <TextBox x:Name="txbLogin" TextWrapping="Wrap" Width="200" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
            <PasswordBox x:Name="psbPassword" Width="200" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
            <Button x:Name="btnLogIn" Content="Log In" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="5" Width="200" Height="20" Background="White" Click="btnLogIn_Click">

            </Button>
        </StackPanel>

    </Grid>
</ContentControl>
